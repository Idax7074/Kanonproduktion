---
import SocialIcon from "./SocialIcon.astro";

const {image, name, insta, face} = Astro.props;
---

<article class="artister">
    <div class="billede">
        <img src={image} alt="billede af artisten">
        <h3>{name}</h3>
    </div>
        <div class="social-links">
            <a href={insta} aria-label="Følg link til instagram"><i class="fa-brands fa-instagram"></i></a>
            <a href={face} aria-label="Følg link til Facebook"> <i class="fa-brands fa-facebook"></i></a>
            <a href="#" aria-label="Få notifikationer fra artisterne"> <i class="fa-regular fa-bell"></i></a>
        </div>
    </article>

  
    
    <style>

       

.billede {
        width: 20rem;
        height: auto;
    }

    h3{
            background-color: var(--color-background-label);
            color: var(--color-text-h3-tertiary);
            display: flex;
            padding: 0.3125rem 0rem;
            justify-content: center;
            align-items: center;
            gap: 0.625rem;
        }
           .social-links i {
          font-size: var(--Headline3-large);
          margin-inline: 0.5%;
          
        }
    .social-links{
    display: flex;
    flex-direction: row;
    padding-top: 1rem;
    justify-content: center;
    gap: 1rem;
    }
        .social-links a {
          color: var(--color-icon-some);
          padding: 0.5rem;
        }

        .fa-bell {
          color: var(--color-icon-stars);
          
        }
        .fa-bell:hover {
            animation: fa-bell 0.8s cubic-bezier(0.455, 0.030, 0.515, 0.955) both;
        }
        @keyframes fa-bell {
  0%,
  100% {
    transform: rotate(0deg);
    transform-origin: 50% 0;
  }
  10% {
    transform: rotate(2deg);
  }
  20%,
  40%,
  60% {
    transform: rotate(-4deg);
  }
  30%,
  50%,
  70% {
    transform: rotate(4deg);
  }
  80% {
    transform: rotate(-2deg);
  }
  90% {
    transform: rotate(2deg);
  }
}

    
        .social-links a:hover{
            color: var(--color-icon-some-hover);
        }

        @media (max-width: 1024px){
            .billede {
                width: auto;
        height: auto;
    }
            h3{
        font-size: var(--Headline3-medium);
    }
    .social-links i {
          font-size: var(--Headline2-large);
          
        }
        .social-links{
 padding-top: 1rem;
 gap: 2rem;
    }
        }

        @media (max-width: 430px) {
            .billede {
                width: 10rem;
        height: 10rem;
    }

    h3{
        font-size: var(--Headline4-small);
    }
    .social-links i {
          font-size: var(--Headline3-small);
          
        }

        .social-links{
 padding-top: 2rem;
 gap: 1rem;

    }
  
  
}
    
    </style>