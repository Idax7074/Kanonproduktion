---
import MainLayout from "../layouts/MainLayout.astro";
import KontaktFormular from "../components/KontaktFormular.astro";
---
<MainLayout title="Kontakt">
<section class="kontakt">
    <article>
    <h1>Kontakt</h1>
    <div class="formular">
    <KontaktFormular></KontaktFormular>
  </div>
    </article>
</section>
</MainLayout>

<script>
	import { gsap } from "gsap";
    
	import { ScrollTrigger } from "gsap/ScrollTrigger";

  //Web + iPad
  // create
  let mm = gsap.matchMedia();

  // add a media query. When it matches, the associated function will run
  mm.add("(min-width: 431px)", () => {
	
	gsap.registerPlugin(ScrollTrigger);
	
	gsap.from(".formular", {
	scrollTrigger: {
		scrub: true,
		trigger: ".kontakt",
		start: "-300 start",
		end: "300 center",
		// markers: true,
	},
	opacity:0.2,
	duration:0.5,
	}); 

});

  //iPhone
  // create
  let sm = gsap.matchMedia();

  // add a media query. When it matches, the associated function will run
  sm.add("(max-width: 430px)", () => {
	
	gsap.registerPlugin(ScrollTrigger);
	
	gsap.from(".formular", {
	scrollTrigger: {
		scrub: true,
		trigger: ".kontakt",
		start: "-200 start",
		end: "500 center",
		// markers: true,
	},
	opacity:0.2,
	duration:0.5,
	}); 
});
</script>

<style>

  h1 {
    padding-inline: var(--gap11);
  }

	section {
		margin-top: 80px;
		margin-bottom: 80px;
	}

  @media (max-width:1024px) {
    h1 {
    padding-bottom: 0px;		
    padding-inline: var(--gap6);
  }
  }

  @media (max-width:430px) {
    h1 {		
    padding-inline: var(--gap4);
  }

  section {
		margin-top: 60px;
		margin-bottom: 60px;
	}
  }
</style>