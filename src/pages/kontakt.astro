---
import MainLayout from "../layouts/MainLayout.astro";
import KontaktFormular from "../components/KontaktFormular.astro";
---
<MainLayout title="Kontakt">
<section class="kontakt">
    <article>
    <h1>Kontakt</h1>
    <div class="formular">
    <KontaktFormular></KontaktFormular>
  </div>
    </article>
</section>
</MainLayout>

<style>

  h1 {
    padding-inline: var(--gap11);
  }

	section {
		margin-top: 80px;
		margin-bottom: 80px;
	}

  @media (max-width:1024px) {
    h1 {
    padding-bottom: 0px;		
    padding-inline: var(--gap6);
  }
  }

  @media (max-width:430px) {
    h1 {		
    padding-inline: var(--gap4);
  }

  section {
		margin-top: 60px;
		margin-bottom: 60px;
	}
  }
</style>